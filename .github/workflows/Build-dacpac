name: Build DACPAC

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]

jobs:
  build:
    runs-on: windows-latest

    steps:
    - uses: actions/checkout@v4
      
    - name: Setup MSBuild
      uses: microsoft/setup-msbuild@v1.0.3

    - name: Restore NuGet packages
      run: nuget restore WarehouseDB/WarehouseDB.sqlproj

    - name: Build DACPAC
      run: msbuild WarehouseDB/WarehouseDB.sqlproj /p:Configuration=Release /p:Platform="Any CPU"
      
    - name: Archive DACPAC
      uses: actions/upload-artifact@v3
      with:
        name: warehouse-db-dacpac
        path: WarehouseDB/bin/Release/WarehouseDB.dacpac
